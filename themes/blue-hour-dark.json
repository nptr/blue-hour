{
	"$schema": "vscode://schemas/color-theme",
	"name": "Blue Hour",
	"type": "dark",
	"colors": {
		"editor.background": "#1E1E1E",
		"editor.foreground": "#D4D4D4",
		"editor.inactiveSelectionBackground": "#3A3D41",
		"editorIndentGuide.background": "#404040",
		"editorIndentGuide.activeBackground": "#707070",
		// Remove ugly editor inlay background
		"editorInlayHint.foreground": "#969696",
		"editorInlayHint.background": "#ffffff00",
		"editorInlayHint.parameterBackground": "#ffffff00",
		"editorInlayHint.typeBackground": "#ffffff00",
		"editor.selectionHighlightBackground": "#ADD6FF26",
		"list.dropBackground": "#383B3D",
		"activityBarBadge.background": "#007ACC",
		"sideBarTitle.foreground": "#BBBBBB",
		"input.placeholderForeground": "#A6A6A6",
		"menu.background": "#303031",
		"menu.foreground": "#CCCCCC",
		// Darker status bar
		"statusBar.background" : "#2c2c2c",
		"statusBar.noFolderBackground" : "#2c2c2c",
		"statusBar.debuggingBackground": "#380d0d",
		"statusBarItem.remoteForeground": "#FFF",
		"statusBarItem.remoteBackground": "#16825D",
		"ports.iconRunningProcessForeground": "#369432",
		"sideBarSectionHeader.background": "#0000",
		"sideBarSectionHeader.border": "#ccc3",
		"tab.lastPinnedBorder": "#ccc3",
		"list.activeSelectionIconForeground": "#FFF",
		"terminal.inactiveSelectionBackground": "#3A3D41",
		// Disable bracket colorization
		"editorBracketHighlight.foreground1": "#f7b83d",
		"editorBracketHighlight.foreground2": "#f7b83d",
		"editorBracketHighlight.foreground3": "#f7b83d",
		"editorBracketHighlight.foreground4": "#f7b83d",
		"editorBracketHighlight.foreground5": "#f7b83d",
		"editorBracketHighlight.foreground6": "#f7b83d",
		"editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
	},
	"tokenColors": [
		{
			"settings": {
				"foreground": "#aeb9c4"
			}
		},
		{
			"scope": [
				"meta.embedded",
				"source.groovy.embedded",
				"string meta.image.inline.markdown",
			],
			"settings": {
				"foreground": "#D4D4D4"
			}
		},
		{
			"scope": "emphasis",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": "strong",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": "header",
			"settings": {
				"foreground": "#000080"
			}
		},
		{
			"scope": "comment",
			"settings": {
				"foreground": "#54616e"
			}
		},
		{
			"name": "Built-in constant",
			"scope": "constant.language",
			"settings": {
				"foreground": "#61bcc6"
			}
		},
		{
			"name": "User-defined constant",
			"scope": [
				"constant.character",
				"constant.other"
			],
			"settings": {
				"foreground": "#228A96"
			}
		},
		{
			"scope": [
				"constant.numeric",
				"variable.other.enummember",
				"keyword.operator.plus.exponent",
				"keyword.operator.minus.exponent"
			],
			"settings": {
				"foreground": "#61bcc6"
			}
		},
		{
			"scope": "constant.regexp",
			"settings": {
				"foreground": "#646695"
			}
		},
		{
			"name": "XML Tags",
			"scope": "entity.name.tag",
			"settings": {
				"foreground": "#228a96"
			}
		},
		{
			"name": "XML Attributes",
			"scope": "entity.other.attribute-name",
			"settings": {
				"foreground": "#bed0e2"
			}
		},
		{
			"scope": [
				"entity.other.attribute-name.class.css",
				"entity.other.attribute-name.class.mixin.css",
				"entity.other.attribute-name.id.css",
				"entity.other.attribute-name.parent-selector.css",
				"entity.other.attribute-name.pseudo-class.css",
				"entity.other.attribute-name.pseudo-element.css",
				"source.css.less entity.other.attribute-name.id",
				"entity.other.attribute-name.scss"
			],
			"settings": {
				"foreground": "#228a96"
			}
		},
		{
			"scope": "invalid",
			"settings": {
				"foreground": "#f44747"
			}
		},
		{
			"scope": "markup.underline",
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"scope": "markup.bold",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#228A96"
			}
		},
		{
			"scope": "markup.heading",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#228A96"
			}
		},
		{
			"scope": "markup.italic",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": "markup.strikethrough",
			"settings": {
				"fontStyle": "strikethrough"
			}
		},
		{
			"scope": "markup.inserted",
			"settings": {
				"foreground": "#b5cea8"
			}
		},
		{
			"scope": "markup.deleted",
			"settings": {
				"foreground": "#ce9178"
			}
		},
		{
			"scope": "markup.changed",
			"settings": {
				"foreground": "#569cd6"
			}
		},
		{
			"scope": "punctuation.definition.quote.begin.markdown",
			"settings": {
				"foreground": "#6A9955"
			}
		},
		{
			"scope": "punctuation.definition.list.begin.markdown",
			"settings": {
				"foreground": "#6796e6"
			}
		},
		{
			"name": "Markup under backticks",
			"scope": "markup.inline.raw",
			"settings": {
				"foreground": "#addbbc"
			}
		},
		{
			"name": "brackets of XML/HTML tags",
			"scope": "punctuation.definition.tag",
			"settings": {
				"foreground": "#808080"
			}
		},
		{
			"name": "C/C++ Macro",
			"scope": [
				"meta.preprocessor",
				"entity.name.function.preprocessor"
			],
			"settings": {
				"foreground": "#bed0e2"
			}
		},
		{
			"scope": "meta.preprocessor.string",
			"settings": {
				"foreground": "#addbbc"
			}
		},
		{
			"scope": "meta.preprocessor.numeric",
			"settings": {
				"foreground": "#61bcc6"
			}
		},
		{
			"scope": "meta.structure.dictionary.key.python",
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"scope": "meta.diff.header",
			"settings": {
				"foreground": "#569cd6"
			}
		},
		{
			"scope": "storage",
			"settings": {
				"foreground": "#508aaa"
			}
		},
		{
			"scope": "storage.type",
			"settings": {
				"foreground": "#508aaa"
			}
		},
		{
			"scope": [
				"string",
				"string.tag",
				"string.value",
				"string.regexp",
				"meta.embedded.assembly"
			],
			"settings": {
				"foreground": "#addbbc"
			}
		},
		{
			"name": "String interpolation",
			"scope": [
				"punctuation.definition.template-expression.begin",
				"punctuation.definition.template-expression.end",
				"punctuation.section.embedded"
			],
			"settings": {
				"foreground": "#569cd6"
			}
		},
		{
			"scope": [
				"meta.template.expression"
			],
			"settings": {
				"foreground": "#aeb9c4"
			}
		},
		{
			"scope": [
				"support.type.vendored.property-name",
				"support.type.property-name",
				"variable.css",
				"variable.scss",
				"variable.other.less",
				"source.coffee.embedded"
			],
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"variable.language",
				"variable.language.this.cpp",
			],
			"settings": {
				"foreground": "#508aaa"
			}
		},
		{
			"scope": [
				"keyword.operator",
			],
			"settings": {
				"foreground": "#508aaa"
			}
		},
		{
			"name": "Function argument use",
			"scope": [
				"keyword.other.use",
				"keyword.other.function.use",
				"keyword.other.special-method",
				"keyword.other.unit",
				"keyword.other.use-as"
			],
			"settings": {
				"foreground": "#61BCC6"
			}
		},
		{
			"name": "Function name",
			"scope": "entity.name.function",
			"settings": {
				"fontStyle": "",
				"foreground": "#bed0e2"
			}
		},
		{
			"name": "Class name",
			"scope": [ 
				"entity.name.class",
				"entity.name.scope-resolution",
				"entity.name.type",
				"entity.name.namespace"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#228A96"
			}
		},
		{
			"name": "Access and scope resolution operators",
			"scope": [
				"punctuation.separator.scope-resolution.cpp", 
				"punctuation.separator.namespace.access.cpp",
				//"punctuation.separator.pointer-access.cpp",
				//"punctuation.separator.dot-access.cpp"
			],
			"settings": {
				"foreground": "#228A96"
			}
		},
		{
			"scope": [
				"punctuation.section.embedded.begin.php",
				"punctuation.section.embedded.end.php"
			],
			"settings": {
				"foreground": "#508AAA"
			}
		},
		{
			"scope": "support.function.git-rebase",
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"scope": "constant.sha.git-rebase",
			"settings": {
				"foreground": "#b5cea8"
			}
		},
		{
			"name": "coloring of the Java import and package identifiers",
			"scope": [
				"storage.modifier.import.java",
				"variable.language.wildcard.java",
				"storage.modifier.package.java"
			],
			"settings": {
				"foreground": "#d4d4d4"
			}
		},
		{
			"name": "JSON Keys",
			"scope": "support.type.property-name.json",
			"settings": {
				"foreground": "#bed0e2"
			}
		},
	],
	"semanticHighlighting": true,
	"semanticTokenColors": {
		"newOperator": "#508aaa",
		"stringLiteral": "#addbbc",
		"customLiteral": "#addbbc",
		"numberLiteral": "#61bcc6",
	}
}